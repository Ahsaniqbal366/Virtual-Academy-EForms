ng-select.ng-select-single.override-shorter-height {
  /**
   * Purpose of this css class is to help the ng-select elements fit in better with our 
   * height overrides to other angular md form field controls.
   */

  padding-bottom: 0;

  .ng-select-container.ng-appearance-outline {
    min-height: 45px;
    border-radius:0px;


    // Prevents the input text from being too far left and overlapping with outlines.
    .ng-value-container .ng-input>input{
      padding: 0 12px;
    }
  }

  // Prevents the select options from overlapping with the text input.
  .ng-dropdown-panel {
    top: 40px;
  }

}

ng-select.ng-select-multiple.override-shorter-height {
  /**
   * Purpose of this css class is to help the ng-select elements fit in better with our 
   * height overrides to other angular md form field controls.
   */

  padding-bottom: 0;

  .ng-select-container.ng-appearance-outline {
    min-height: 45px;
    border-radius:0px;
    border-color: var(--ion-color-tms-light-gray);
    color:black;

    .ng-value-container .ng-placeholder{
      top:10px;
      color: black;
    }
    // Prevents the input text from being too far left and overlapping with outlines.
    .ng-value-container .ng-input>input{
      padding: 0 12px;
    }
  }

  // Prevents the select options from overlapping with the text input.
  .ng-dropdown-panel {
    top: 40px;
  }


}


